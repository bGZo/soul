 :default-queries
 {:journals[
            ;; the "NOW" query asks the tasks which need to be finished "now",
            {:title "üî® NOW"
             :query [:find (pull ?h [*])
                     ;:in $ ?start ?today
                     :where
                     [?h :block/marker ?marker]
                     [(contains? #{"NOW" "DOING"} ?marker)]
                     ;[?h :block/page ?p]
                     ;[?p :block/journal? true]
                     ;[?p :block/page? true]
                     ;[?p :block/journal-day ?d]
                     ;[(>= ?d ?start)]
                     ;[(<= ?d ?today)]
                    ]
             ;:inputs [:3650d :today]
             :result-transform (fn [result]
                                 (sort-by (fn [h]
                                            (get h :block/priority "Z")) result))
             :breadcrumbs-show? true
             :collapsed? true}

            ;; the "NEXT" query asks the future tasks.
            {:title "üìÖ NEXT"
             :query [:find (pull ?b [*])
                     ;:in $ ?start ?next
                     :where
                     [?h :block/marker ?marker]
                     [(contains? #{"NOW" "LATER" "TODO"} ?marker)]
                     [?h :block/page ?p]
                     [?p :block/journal? true]
                     [?p :block/journal-day ?d]
                     ;[(> ?d ?start)]
                     ;[(< ?d ?next)]
                     ]
             ;:inputs [:today :3650d-after]
             :breadcrumbs-show? true
             :collapsed? true}

            {:title "üóìÔ∏è Scheduled"
             :query [:find (pull ?b [*])
                     :in $ ?next
                     :where
                     (task ?b #{"NOW" "LATER" "TODO" "DOING" "WAIT" "WAITING"})
                     (not (property ?b :tags "Routine"))
                     (or-join [?b ?d]
                              [?b :block/scheduled ?d])
                     [(<= ?d ?next)]]
             :inputs [:today]
             :result-transform (fn [result]
                                 (sort-by (fn [h]
                                            (get h :block/scheduled)) result))
             :breadcrumbs-show? true
             :collapsed? true}

            {:title "üî• OVERDUE"
             :query [:find (pull ?b [*])
                     ;:in $ ?start ?today
                     :where
                     (task ?b #{"NOW" "TODO"})
                     (not [?b :block/scheduled ?d])
                     (not [?b :block/deadline ?d])
                     ;(between ?b ?start ?today)
                     ]
             ;:inputs [:-3650d :today]
             :breadcrumbs-show? true
             :collapsed? true}
            ]}

